{
    "manifest_version": 3,
    "name": "LeetCode Solver Pro+",
    "version": "1.0.0",
    "description": "Enterprise-grade LeetCode solution generator using AI",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://leetcode.com/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "logo.png",
            "48": "logo.png",
            "128": "logo.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}